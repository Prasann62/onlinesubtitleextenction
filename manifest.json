{
    "manifest_version": 3,
    "name": "Brave Mini Player",
    "version": "1.0.0",
    "description": "Premium Mini Player and Picture-in-Picture for any website video. Focused on privacy and performance.",
    "permissions": [
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "pipController.js",
                "miniPlayer.js",
                "content.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}